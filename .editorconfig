# Editor configuration, see http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
# indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
line_length = 100

[Makefile]
indent_style = tab

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.py]
indent_style = space

[*.sql]
indent_style = space

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.sh]
indent_style = tab
